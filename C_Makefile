CC = gcc
CFLAGS = \
	 -Wall -W \
	 -Wshadow -Wwrite-strings \
	 -g \
	 #-ansi -pedantic\
	 #-O \

LDFLAGS = \
	  -lm \
	  -lpthread \
	  -lrt \

TARGET = main

DEPS = \

OBJ = \

%.o : %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

$(TARGET) : $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS) $(LDFLAGS)

run: $(TARGET)
	./$(TARGET)

clean:
	rm -f *.o

cleanall:
	clean
	rm -f $(TARGET)
